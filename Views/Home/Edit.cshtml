@model EditViewModel
@{
    ViewBag.Title = "Edit";
    var photopath = "~/Images/" + (Model.ExistingPhotoPath ?? "moviecollageHollywood.jpg");
}


    <form enctype="multipart/form-data" asp-action="Edit" asp-controller="home" method="post" class="mt-3">
        <input hidden asp-for="ExistingPhotoPath" />
        <!--<input hidden asp-for="Id" />-->
        <input type="hidden" value="@Model.Id" id="Id" />


        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row mt-2">
            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Genre" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Genre" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Generes>()"></select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Rating" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Rating" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ReleaseDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PhotoPath" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PhotoPath" class="form-control custom-file-input" />
                <label class="custom-file-label">Click here to choose file....</label>
            </div>
        </div>
        <div class="form-group row">
            <img class="card-img-top" src="@photopath" asp-append-version="true" style="height:200px;width:200px" />
        </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary m-1">Update</button>
            <a asp-controller="home" asp-action="Index" class="btn btn-primary m-1">Cancel</a>
        </div>


        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var filename = $(this).val.split("\\").pop();
                        $(this).next('.Custom-file-label').html(filename);
                    });
                });
            </script>
        }
    </form>

